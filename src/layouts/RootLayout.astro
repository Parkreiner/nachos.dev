---
import PageMetadata from "../components/PageMetadata/PageMetadata.astro";
import NavHeader from "../components/NavHeader/NavHeader.astro";
import Footer from "../components/Footer/Footer.astro";

type Props = Readonly<{
  title: string | null;
  description: string;
}>;

const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <PageMetadata title={title} description={description} />
  </head>

  <body>
    <NavHeader />
    <main class="mx-auto max-w-screen-md px-4">
      <slot />
    </main>
    <Footer />
  </body>
</html>
